<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyConference.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:paginas="clr-namespace:MyConference.Paginas"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Cronograma"  Icon="tab_cronograma.png">
            <ShellContent
                Title="Dia 1"
                ContentTemplate="{DataTemplate paginas:PaginaDeCronograma}"
                Route="CronogramaDia1" />
            <ShellContent
                Title="Dia 2"
                ContentTemplate="{DataTemplate paginas:PaginaDeCronograma}"
                Route="CronogramaDia2" />
        </Tab>
        <Tab Title="Minha Agenda" Icon="tab_agenda.png">
            <ShellContent
                Title="Dia 1"
                ContentTemplate="{DataTemplate paginas:PaginaDeAgenda}"
                Route="MinhaAgendaDia1" />
            <ShellContent
                Title="Dia 2 "
                ContentTemplate="{DataTemplate paginas:PaginaDeAgenda}"
                Route="MinhaAgendaDia2" />
        </Tab>
        <Tab Title="Patrocinadores" Icon="tab_patrocinadores.png">
            <ShellContent
                Title="Patrocinadores"
                ContentTemplate="{DataTemplate paginas:PaginaDePatrocinadores}"
                Route="Patrocinadores" /> 
        </Tab>
    </TabBar>


</Shell>
